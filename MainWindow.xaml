<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2" 
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        mc:Ignorable="d"
        Title="Ханойская башня" Height="200" Width="470" WindowStartupLocation="CenterScreen">

    <Canvas x:Name="Canvas" Margin="30 50">
        <Button Click="ShowDescription" Canvas.Top="54" Canvas.Left="134">Показать описание</Button>
        <TextBlock Name="TextBlock" TextWrapping="Wrap" Canvas.Left="84">
            Введите количество дисков от 3 до 15
        </TextBlock>
        <TextBox x:Name="TextBox" TextWrapping="Wrap" TextAlignment="Center" Width="50" KeyDown="TextChanged"
                   Canvas.Top="24" Canvas.Left="164" RenderTransformOrigin="0.1,2.619">
        </TextBox>
    </Canvas>
</Window>
